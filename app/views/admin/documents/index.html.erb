<h1>Listing documents</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= truncate(document.body, length: 300) %></td>
        <td><%= link_to 'Show', admin_document_path(document) %></td>
        <td><%= link_to 'Edit', edit_admin_document_path(document) %></td>
        <td><%= link_to 'Destroy', admin_document_path(document), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate %>

