<h1>
	<% if @user %>
	<%=	gravatar_for @user	%>
	<%=	@user.name	%>
	<%=	@user.email	%>
	<% end %>
</h1>

<div class="m_posts">
	<% if @user.microposts.any? %>
		<h3>microposts: <%= @user.microposts.count %></h3>
		<ol class="microposts">
			<%= render @microposts %>
		</ol>

		<%= will_paginate @microposts %>
	<% end %>
</div>